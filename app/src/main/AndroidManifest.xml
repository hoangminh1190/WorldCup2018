<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.m2team.worldcup">

    <application xmlns:tools="http://schemas.android.com/tools"
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".qualifiers.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home.MyActivity" />
        <activity
            android:name=".qualifiers.teams.TeamDetailActivity"
            android:theme="@style/CoordinateTheme"/>
        <activity
            android:name=".stadiums.HostedCountryActivity"
            android:label="@string/title_activity_hosted_country"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".stadiums.StadiumDetailActivity"
            android:theme="@style/CoordinateTheme"/>
    </application>

</manifest>